	"scripts": {
		"analyze": "run-s build:web build:analyze",
		"build": "run-s clean build:web build:electron",
		"build:analyze": "source-map-explorer 'dist/web/static/js/*.js'",
		"build:web": "BUILD_PATH=dist/web react-scripts build",
		"postbuild:web": "cpy --cwd dist/web --parents . ../../electron-build/renderer",
		"build:electron": "npm-run-all --parallel build:web build:electron-main --serial build:electron-bundle",
		"build:electron-main": "tsc --project tsconfig.electron.json",
		"build:electron-bundle": "electron-builder --config electron-builder.config.js",
		"clean": "rimraf dist electron-build",
		"lint": "eslint src",
		"start": "react-scripts start",
		"start:electron": "concurrently \"BROWSER=none npm start\" \"tsc --watch --project tsconfig.electron.json\" \"wait-on http://localhost:3000 && electron .\"",
		"start:electron-prod": "NODE_ENV=development npm-run-all --serial clean --parallel build:web build:electron-main --serial start:electron-prod-boot",
		"start:electron-prod-boot": "electron electron-build/main/src/electron/index.js",
		"test": "react-scripts test",
		"test:coverage": "react-scripts test --coverage --collectCoverageFrom=\"src/**/*.{ts,tsx}\"",
		"storybook": "start-storybook -p 6006 -s public",
		"build-storybook": "build-storybook -s public"
	},
	"eslintConfig": {
		"extends": [
			"react-app",
			"react-app/jest"
		]
	},
	"jest": {
		"restoreMocks": true,
		"transformIgnorePatterns": [
			"/!node_modules\\/segseg/"
		]
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"homepage": "./",
	"main": "electron-build/electron/src/electron/index.js"
}
