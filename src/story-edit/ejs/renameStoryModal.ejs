<div id="renameStoryModal" class="modal hide">

<button class="save close subtle" data-modal-hide="this">
<i class="fa fa-times"></i>
</button>

<h2 class="title">
<%= s('Rename Story') %>
</h2>

<div class="content">

<p>
<%= s("What should this story's name be?") %>
</p>

<form id="renameStoryForm">

<p>
<input class="storyName" type="text" required>
</p>

<p class="noNameError error">
<%= s('Please enter a name.') %>
</p>

<p class="dialogButtons">
<button class="subtle" data-modal-hide="this"><%= s('Cancel') %></button>
<button type="submit"><%= s('Save') %></button>
</p>

</form>

</div> <!-- .content -->

</div> <!-- #renameStoryModal -->
