<div id="searchModal">
	<header>
		<h2><%= s('Find and Replace') %></h2>

		<button class="close" data-modal="close"><i class="fa fa-remove"></i></button>
	</header>

	<p>
		<label for="searchFor"><%= s('Search For') %></label>
		<br>
		<textarea id="searchFor" class="block"></textarea>
	</p>

	<p>
		<input type="checkbox" id="searchNames" checked>
		<label for="searchNames"><%= s('Include passage names') %></label>

		<input type="checkbox" id="searchCaseSensitive">
		<label for="searchCaseSensitive"><%=
		/* L10n: As in uppercase or lowercase letters. */ 
		s('Match case')
		%></label>

		<input type="checkbox" id="searchRegexp">
		<label for="searchRegexp"><%=
		/* L10n: A technical term, see https://en.wikipedia.org/wiki/Regular_expression. */
		s('Regular expression')
		%></label>
	</p>

	<p>
		<label for="replaceWith"><%= s('Replace With') %></label>
		<textarea id="replaceWith" class="block"></textarea>
	</p>

	<p class="resultSummary hide">
		<span class="matches"></span>

		<button class="replaceAll danger">
			<i class="fa fa-bolt"></i> <%= s('Replace All') %>
		</button>
	</p>

	<p class="loading hide">
		<i class="fa fa-circle-o-notch fa-spin"></i> <%= s('Searching...') %>
	</p>

	<div class="results"></div>
</div>
