<div id="storyListView">
	<nav>
		<div class="main">
			<h1 class="logo"><%= s('Twine') %></h1>

			<ul class="menu centered">
				<li>
					<button class="addStory create" title="<%= s('Create a brand-new story') %>" data-tooltip-pos="left">
					<i class="fa fa-plus"></i> <%= s('Story') %>
					</button>
				</li>
				<li>
					<button class="importStory" title="<%= s('Import a published story or Twine archive') %>" data-tooltip-pos="left">
					<i class="fa fa-upload"></i> <%= s('Import From File') %>
					</button>
				</li>
				<li>
					<button class="saveArchive" title="<%= s('Save all stories to a Twine archive file') %>" data-tooltip-pos="left">
					<i class="fa fa-briefcase"></i> <%= s('Archive') %>
					</button>
				</li>
				<li>
					<button class="showFormats" title="<%= s('Work with story and proofing formats') %>" data-tooltip-pos="left">
					<i class="fa fa-file-code-o"></i> <%= s('Formats') %>
					</button>
				</li>
				<li>
					<button class="showLocale" title="<%= s('Change the language Twine uses') %>" data-tooltip-pos="left">
					<i class="fa fa-comment-o"></i> <%= s('Language') %>
					</button>
				</li>
				<li>
					<button class="showHelp" title="<%= s('Browse online help') %>" data-tooltip-pos="left">
					<i class="fa fa-question-circle"></i> <%= s('Help') %>
					</button>
				</li>
			</ul>
		</div> <!-- .main -->
		<footer class="small">
			<p class="quota"></p>

			<p>
			<%= s('version') %> <button class="link showAbout"><span class="app-version"></span></button>
			<br>
			<a href="https://bitbucket.org/klembot/twinejs/issues"><i class="fa fa-bug"></i> <%= s('Report a Bug') %></a>
			</p>
		</footer>
	</nav>
	<div class="main">
		<header>
			<h1>
				<%= s('Stories') %>
			</h1>

			<div class="sorter small">
				<%= s('Sort By') %>

				<span class="buttonGroup">
					<button class="sortByDate active" title="<%= s('Last changed date') %>">
					<%= s('Edit Date') %>
					</button>

					<button class="sortByName" title="<%= s('Story name') %>">
					<%= s('Name') %>
					</button>
				</span>
			</div>
		</header>

		<p class="noStories">
		<%= s('There are no stories saved in Twine right now. To get started, you can either create a new story or import an existing one from a file.') %>
		</p>

		<div class="stories"></div>
	</div> <!-- .main -->
</div> <!-- #storyListView -->
