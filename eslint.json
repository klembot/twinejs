{
    "rules": {
        "semi": [
            2,
            "always"
        ],
		"no-console": [
			2,
			{
				"allow": ["warn"]
			}	
		],
        "no-extra-semi": 0,
        "no-mixed-spaces-and-tabs": 0,
        "comma-dangle": 0
    },
    "env": {
        "browser": true,
        "es6": true,
        "commonjs": true,
        "node": true
    },
    "extends": "eslint:recommended"
}
